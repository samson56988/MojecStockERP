@model MojecStockERP.Models.PlasticOrder
@{
    ViewBag.Title = "UpdatePlasticOrder";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Plastic Order</h1>

    <div class="row">

        <div class="col-lg-12">

            <!-- Circle Buttons -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Plastic Order</h6>
                </div>
                <form class="needs-validation" novalidate="" action="UpdateInstallation" method="post">
                    <div class="card-body">

                        <div class="form-row">
                            <div class="col-md-4 mb-3">
                                <label for="validationCustom01">Chemical</label>
                                @Html.EditorFor(model => model.Chemicals, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationCustom01">Quantity</label>
                                @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationCustom01">Date </label>
                                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", @type = "date", required = "required" } })
                            </div>

                            @Html.HiddenFor(model => model.orderId)
                        </div>

                        <button type="submit" class="btn btn-primary btn-icon-split">
                            <span class="icon text-white-50">
                            </span>
                            <span class="text">Add</span>
                        </button>

                    </div>
                </form>
            </div>




            <!-- Brand Buttons -->


        </div>



    </div>

</div>

