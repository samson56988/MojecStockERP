@model IEnumerable<MojecStockERP.Models.StoredMeters>
@{
    ViewBag.Title = "StoredMeters";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Meters Available</h1>


    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Meters Available</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="text-capitalize">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.MeterNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MeterType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Model)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SGC)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Partners)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.SoftwareVersion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HardwareVersion)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.MeterNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MeterType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Model)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SGC)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Partners)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SoftwareVersion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HardwareVersion)
                            </td>
                            <td class="btn-group">
                                @Html.ActionLink("Edit", "UpdateRecievedMeters", new { id = item.MeterID }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Delete", "DeleteStoredMeters", new { id = item.MeterID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>

</div>

@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
  $(function(){
     var save = '@TempData["save"]'
if(save!=null)
{
 alertify.success(save);
}
var edit = '@TempData["edit"]'
if(edit!='')
{
    alertify.success(edit);
}
 var del = '@TempData["delete"]'
if(del!='')
{
    alertify.error(del);
}
 })
    </script>

}