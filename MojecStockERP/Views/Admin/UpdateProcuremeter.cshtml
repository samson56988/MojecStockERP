@model MojecStockERP.Models.MeterOrder
@{
    ViewBag.Title = "UpdateProcuremeter";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Meters Ordered</h1>

    <div class="row">

        <div class="col-lg-12">

            <!-- Circle Buttons -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Meters Ordered</h6>
                </div>
                <form class="needs-validation" novalidate="" action="UpdateProcuremeter" method="post">
                    <div class="card-body">

                        <div class="form-row">
                            <div class="col-md-4 mb-3">
                                <label for="validationCustom01">Meter Type</label>
                                @Html.EditorFor(model => model.MeterType, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationCustom01">Model</label>
                                @Html.EditorFor(model => model.Model, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationCustom01">Partners</label>
                                @Html.EditorFor(model => model.Partners, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationCustom01">Quantity</label>
                                @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationCustom01">Bill Of Laden</label>
                                @Html.EditorFor(model => model.BillofLaden, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationCustom01">Date</label>
                                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", type ="date" } })
                            </div>
                        </div>

                        @Html.HiddenFor(model => model.MeterID)

                        <button type="submit" class="btn btn-primary btn-icon-split">
                            <span class="icon text-white-50">
                            </span>
                            <span class="text">Add</span>
                        </button>

                    </div>
                </form>
            </div>




            <!-- Brand Buttons -->


        </div>



    </div>

</div>


