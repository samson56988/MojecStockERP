@model IEnumerable<MojecStockERP.Models.MetersDispatched>
@{
    ViewBag.Title = "MeterDispatched";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Meters Dispatched</h1>


    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Meters Dispatched</h6>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("DownloadReport", "MOJECIE", FormMethod.Post))
            {
                <div class="form-row mt-4">
                    <div class="col-md-3 mb-3">
                        <label for="validationCustom01">Date</label>
                        <input type="date" class="form-control" id="validationCustom01" required="">
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="validationCustom01">Date</label>
                        <input type="date" class="form-control" id="validationCustom01" required="">
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="validationCustom01">Disco</label>
                        <input type="text" class="form-control" id="validationCustom01" required="">
                    </div>
                    <div class="col-md-3 mb-3">
                        <br />
                        <button type="submit" class="btn btn-outline-primary">Download</button>
                    </div>
                </div>

            }
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="text-capitalize">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.MeterNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MeterType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Model)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SGC)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.DateOfDispatch)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Partners)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Disco)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.MeterNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MeterType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Model)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SGC)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateOfDispatch)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Partners)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Disco)
                            </td>
                            <td class="btn-group">
                                @Html.ActionLink("Edit", "UpdateInstallation", new { id = item.MeterID }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Delete", "DeleteInstallation", new { id = item.MeterID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>

</div>

