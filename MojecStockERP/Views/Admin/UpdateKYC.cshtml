@model MojecStockERP.Models.KYC
@{
    ViewBag.Title = "UpdateKYC";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">KYC</h1>

    <div class="row">

        <div class="col-lg-12">

            <!-- Circle Buttons -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">KYC</h6>
                </div>
                <form class="needs-validation" novalidate="" action="UpdateKYC" method="post">
                    <div class="card-body">

                        <div class="form-row">
                            <div class="col-md-4 mb-3">
                                <label for="validationCustom01">Date Shared</label>
                                @Html.EditorFor(model => model.DateShared, new { htmlAttributes = new { @class = "form-control",@type ="date", required = "required" } })
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationCustom01">Account No 1</label>
                                @Html.EditorFor(model => model.ACno1, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationCustom01">Account No 2</label>
                                @Html.EditorFor(model => model.Acno2, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationCustom01">SBCs Main</label>
                                @Html.EditorFor(model => model.SBCsMain, new { htmlAttributes = new { @class = "form-control" } })
                            </div>

                            @Html.HiddenFor(model => model.ARN)

                            <div class="col-md-4 mb-3">
                                <label for="validationCustom01">Customer Name</label>
                                @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control"} })
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationCustom01">Email</label>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationCustom01">Phone Number</label>
                                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationCustom01">Address</label>
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationCustom01">BU</label>
                                @Html.EditorFor(model => model.BU, new { htmlAttributes = new { @class = "form-control"} })
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationCustom01">Tarriff</label>
                                @Html.EditorFor(model => model.Tarriff, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationCustom01">Meter Status</label>
                                @Html.EditorFor(model => model.MeterStatus, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationCustom01">Type Of Apartment</label>
                                @Html.EditorFor(model => model.TypeOfApartment, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationCustom01">Meter Recommended</label>
                                @Html.EditorFor(model => model.MeterRecommended, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationCustom01">Additional Comment</label>
                                @Html.EditorFor(model => model.AdditionalComment, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-icon-split">
                            <span class="icon text-white-50">
                            </span>
                            <span class="text">Update</span>
                        </button>

                    </div>
                </form>
            </div>




            <!-- Brand Buttons -->


        </div>



    </div>

</div>