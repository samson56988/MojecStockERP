
@{
    ViewBag.Title = "UploadMetersRecieved";
    Layout = "~/Views/Shared/Store.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Meters Recieved</h1>

    <div class="row">

        <div class="col-lg-12">

            <!-- Circle Buttons -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Upload Documents</h6>
                </div>
                <form class="needs-validation" novalidate="" action="UploadMetersRecieved" method="post" enctype="multipart/form-data">
                    <div class="card-body">

                        <div class="form-row">
                            <div class="col-md-4 mb-3">
                                <label for="validationCustom01">File</label>
                                <input type="file" class="form-control" id="validationCustom01" name="file" required="">
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-icon-split">
                            <span class="icon text-white-50">
                            </span>
                            <span class="text">Upload</span>
                        </button>

                        <label>@ViewBag.Error</label>

                    </div>
                </form>
            </div>

            <!-- Brand Buttons -->


        </div>



    </div>

</div>

@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
  $(function(){
     var save = '@TempData["save"]'
if(save!=null)
{
 alertify.success(save);
}
var edit = '@TempData["edit"]'
if(edit!='')
{
    alertify.success(edit);
}
 var del = '@TempData["delete"]'
if(del!='')
{
    alertify.error(del);
}
 })
    </script>

}

